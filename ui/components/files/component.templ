package files

import (
    "io/fs"
)

templ Component(files []fs.FileInfo) {
    <div class="bg-white dark:bg-gray-900 max-w-2xl mx-auto mt-10 rounded shadow p-6">
        <h2 class="text-2xl font-bold mb-4">File Explorer</h2>
        <ul class="divide-y divide-gray-200">
            for _, file := range files {
                @Node(file)
            }
        </ul>
    </div>
}
